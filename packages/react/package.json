{
  "name": "@adview/react",
  "version": "1.0.0",
  "description": "AdView React",
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "lint": "eslint . --max-warnings 0",
    "clean": "rm -rf .turbo node_modules dist"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    },
    "./server": {
      "import": "./dist/server.mjs",
      "module": "./dist/server.js",
      "types": "./dist/server.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "adview",
    "ad widget",
    "react"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/geniusrabbit/adview.git"
  },
  "homepage": "https://github.com/geniusrabbit/adview/tree/main/packages/react#readme",
  "peerDependencies": {
    "react": "^19.1.0"
  },
  "author": "AdView Team",
  "license": "MIT"
}
