{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src/**/*.ts|tsx",
    "src/**/*",
    "../../utils/*.ts",
    "../../typings"
  ],
  "exclude": ["node_modules"],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "noEmit": true,
    "target": "es6",
    "declaration": true,
    "jsx": "react",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "sourceMap": true,
    "skipLibCheck": true,
    "isolatedModules": false,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
}
