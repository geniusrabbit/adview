{
  "$schema": "https://json.schemastore.org/tsconfig",
  "include": [
    "src/**/*.ts|tsx",
    "src/**/*",
    "../../utils/*.ts",
    "../../typings"
  ],
  "exclude": ["node_modules"],
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "isolatedModules": false,
    "resolveJsonModule": true,
    "noUnusedLocals": false,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    }
  },
}
